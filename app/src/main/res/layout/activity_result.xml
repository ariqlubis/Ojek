<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/order_result"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="45dp"
        android:text="@string/perjalananmu_telah_sampai_dengan_selamat"
        android:textColor="#333333"
        android:textFontWeight="500"
        android:textSize="22sp"
        tools:targetApi="p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/driver"
            android:contentDescription="@string/todo"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dani_ramadhani"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="150px"/>
                <TextView
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:text="BM 1771 CO"
                    android:textColor="#020202"
                    android:textSize="15dp"
                    android:layout_marginTop="20px"
                    />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/shape_rectangle_outline_8_020202"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibayar Menggunakan Cash"
            android:textColor="#020202"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:layout_margin="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"

            android:textColor="#020202"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/kisspng_motorcycle_scooter_vehicle_bicycle_logo_scooter_motorcycle_silhouette_transparent_png_a_5ceca357008689_1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDR 14.000"
                android:textColor="#020202"
                android:textSize="20dp"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/shape_rectangle_outline_8_020202"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="Deposit"
                android:textColor="#020202"
                android:textSize="15dp"
                android:fontFamily="@font/poppins"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/idr_14_000"
                android:textColor="#020202"
                android:textSize="15dp"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent"
        android:gravity="end">
    <Button
        android:id="@+id/btnSignIn"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/home"
        android:textAllCaps="false"
        android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>

